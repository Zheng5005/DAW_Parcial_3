@{
    Layout = "_loginlayout";
}

<form asp-action="ValidarUsuario">

    <!--INICIO DE FORMULARIO-->
    <h2 class="form-title" style="margin-top: 35px;"><center>Iniciar Sesión</center></h2>

    <label style="margin-top: 15px; margin-top: 45px;">Correo Electronico:</label><br>
    <input type="text" name="correo" required style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;"><br>

    <label>Contraseña:</label><br>
    <input type="password" name="contrasena" required style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;"><br>

    <div style="text-align: left; margin-bottom: 15px;">
        <small>* Campos requeridos</small>
    </div>

    <center><button type="submit" class="btn btn-dark btn-submit" style="background-color: ##17202A;">Iniciar Sesión</button></center>
</form>
