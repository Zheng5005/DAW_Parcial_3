@model Usuarios
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Estilos personalizados -->
    <style>
        #previewImage {
            display: block;
            max-width: 100%;
            max-height: 200px;
            margin-left: auto; 
            margin-right: 100px; 
        }
    </style>
</head>
<body>
    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
        <h1 style="color: white; margin-left: 20px;">CLASER</h1>
    </nav>

    <div class="container my-5 pt-5">
        <div class="card text-center container border border-black" style="max-width: 900px;">
            <div class="card-header">
                <h5 class="card-title" style="font-size: 30px;">Registro</h5>
            </div>
            <div class="card-body">
                <!-- Contenido del formulario de registro -->
                <div>
                    <form method="post" asp-action="Registrous" asp-controller="Registros" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">

                            <!-- Columna 1 -->
                            <div class="col-md-6">
                                <div class="form-group">
                                        <div class="d-flex">
                                            <div class="form-group px-1">
                                                <label style="font-size:20px">Nombre</label>
                                                <input asp-for="nombre" class="form-control" />
                                                <span asp-validation-for="nombre" class="text-danger"></span>
                                            </div>
                                            <div class="form-group px-1">
                                                <label style="font-size:20px">Apellido</label>
                                                <input asp-for="apellido" class="form-control" />
                                                <span asp-validation-for="apellido" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <label style="font-size: 20px;">Correo</label>
                                            <input asp-for="correo" class="form-control" />
                                            <span asp-validation-for="correo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-size: 20px;">Teléfono</label>
                                            <input asp-for="telefono" class="form-control" />
                                            <span asp-validation-for="telefono" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-size: 20px;">Contraseña</label>
                                            <input type="password" asp-for="contrasena" class="form-control" />
                                            <span asp-validation-for="contrasena" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-size: 20px;">Nombre de la Empresa</label>
                                            <input asp-for="nombre_empresa" class="form-control" />
                                            <span asp-validation-for="nombre_empresa" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label style="font-size: 20px;">Nombre de Contacto</label>
                                            <input asp-for="nombre_contacto" class="form-control" />
                                            <span asp-validation-for="nombre_contacto" class="text-danger"></span>
                                        </div>
                                   
                                </div>
                            </div>

                                <!-- columna 2 -->
                                <div class="col-md-6">
                                    <div class="form-group container">
                                        <div class="text-center">
                                            <br>
                                            <br>
                                            <br>
                                            <br>

                                            <!-- Centro el contenido -->
                                            <div class="image-preview" id="imagePreview">
                                                <img src="" class="image-preview__image" id="previewImage">
                                                <span class="image-preview__default-text">Vista previa</span>
                                            </div>
                                            @* Coso para la foto *@
                                            <label for="photo">Incluya una foto</label>
                                            <div class="row justify-content-center">
                                                <!-- Centro el row -->
                                                <input type="file" id="archivo" name="archivo" accept="image/*" />
                                            </div>

                                            <!-- Botones de envío -->
                                            <div class="container my-4 pt-4">
                                                <div class="d-flex justify-content-center text-center">
                                                    <button class="btn btn-dark btn-lg mx-2" style="background-color: #17202A;">Registrarse</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                             </div>

                           
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer style="background-color: #343a40; color: #fff; text-align: center; padding: 20px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p>Somos CLASER de tu confianza</p>
                    <p>Dirección: Bypass a Metapán y, Calle Antigua A San Salvador, Santa Ana</p>
                </div>
                <div class="col-md-4">
                    <p>Teléfono: +503 1111-2222</p>
                    <p>Correo electrónico: claser@empresa.com</p>
                </div>
                <div class="col-md-4">
                    <p>Sitio web: <a href="http://www.empresa.com" style="text-decoration: none; color: #fff;">www.empresa.com</a></p>
                    <p>© 2024 Todos los derechos reservados</p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Script para mostrar la vista previa de la imagen seleccionada
        document.getElementById("archivo").addEventListener("change", function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function () {
                    const previewImage = document.getElementById("previewImage");
                    previewImage.src = reader.result;
                    previewImage.style.display = "block";
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
